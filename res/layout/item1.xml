<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center" android:longClickable="true">
        <TextView

                android:layout_width="215dp"
                android:layout_height="39dp"
                android:text="New Text"
                android:id="@+id/txt1" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="13dp"
                android:layout_height="75dp"
                android:id="@+id/imageView"
                android:layout_alignParentLeft="true" android:layout_marginLeft="227dp"
                android:layout_alignBottom="@+id/txt1" android:layout_alignRight="@+id/txt2"/>
        <TextView
                android:layout_width="125dp"
                android:layout_height="23dp"
                android:text="New Text1"
                android:id="@+id/txt2" android:layout_alignLeft="@+id/txt1"
                android:layout_below="@+id/txt1"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>